<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View">
    <center>
        <ScrollPane prefHeight="500.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <content>
                <AnchorPane maxHeight="5000.0" maxWidth="5000.0" minHeight="0.0" minWidth="0.0" prefHeight="480.0" prefWidth="395.0" translateX="1.0">
                    <children>
                        <TableView maxHeight="5000.0" maxWidth="5000.0" prefHeight="500.0" prefWidth="400.0">
                            <columns>
                                <TableColumn prefWidth="75.0" sortable="false" text="User" />
                                <TableColumn prefWidth="325.0" sortable="false" text="Message" />
                            </columns>
                        </TableView>
                    </children></AnchorPane>
            </content>
        </ScrollPane>
    </center>
    <right>
        <ScrollPane prefHeight="500.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <TableView maxHeight="5000.0" prefHeight="498.0" prefWidth="198.0">
              <columns>
                <TableColumn prefWidth="198.0" text="Users" />
              </columns>
            </TableView>
         </content></ScrollPane>
    </right>
    <bottom>
        <HBox maxHeight="100.0" minWidth="50.0" prefHeight="100.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <TextArea fx:id="msgField" maxHeight="100.0" maxWidth="5000.0" prefHeight="100.0" prefWidth="500.0" />
                <Separator orientation="VERTICAL" prefHeight="100.0" />
                <Button fx:id="enterMsg" maxHeight="50.0" maxWidth="98.0" mnemonicParsing="false" onAction="#sendMsg" prefHeight="50.0" prefWidth="98.0" text="Send" textAlignment="CENTER" translateX="-2.0" translateY="22.0" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
